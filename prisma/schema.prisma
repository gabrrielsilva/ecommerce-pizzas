generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  username          String
  password          String
  address           Address[]
  phoneNumber       String    @unique
  profilePictureUrl String?
  isAdmin           Boolean   @default(false)
  Order             Order[]
}

model Address {
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @id
  street    String
  number    Int
  district  String
  city      String
  state     String  @db.VarChar(2)
}

model MenuItem {
  id          Int       @id @default(autoincrement())
  title       String    @unique
  ingredients String?
  servesUpTo  Int?
  price       Float
  photoUrl    String?
  available   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Order       Order[]
}

model Order {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  items       MenuItem[]
  amount      Float
  activeOrder Boolean     @default(true)
  status      Int
}